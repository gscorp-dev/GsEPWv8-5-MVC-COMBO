@model GsEPWv8_5_MVC.Model.StockAsOfDateModel
@{
    var hdrcount = Model.ListStockAsOfDateGrid.Count;
    int AvlCtn = 0;
    int AvlQty = 0;

}
@for (int k = 0; k < Model.ListStockAsOfDateGrid.Count(); k++)
{
    AvlCtn = AvlCtn + Model.ListStockAsOfDateGrid[k].Ctns;
    AvlQty = AvlQty + Model.ListStockAsOfDateGrid[k].avail_qty;
}
<br />
<div id="showSummary">
    <table>
        <tr>
            <td style="width:25%;text-align:center;">
                <span style="font-size: 1.5em;color:#116b42;font-weight: bold;">
                    Total Records:
                </span>
                <label id="lblhdrcount" class="totalCount" style="text-align:left">
                    @hdrcount
                </label>
            </td>
            <td style="font-size:1.5em;color:black;font-weight: bold;text-align:left;padding-right: 10px;font-family:Verdana;font-weight:200; ">
                Avl Ctn:
            </td>
            <td>
                <input id="txtAlocQty" type="text" name="AlocQty" class="form-control" value="@AvlCtn" style="font-size:16px;font-weight: 900;font-weight: 900;font-family: verdana;color: red;">
            </td>
            <td style="font-size:1.5em;color:black;font-weight: bold;text-align:left;padding-left:30px;padding-right: 10px;font-family:Verdana;font-weight:200; ">
                Avl Qty:
            </td>
            <td>
                <input id="txtAlocQty" type="text" name="AlocQty" class="form-control" value="@AvlQty" style="font-size:16px;font-weight: 900;font-weight: 900;font-family: verdana;color: red;">
            </td>
            @*<td style="font-size:1.5em;color:black;font-weight: bold;text-align:left; padding-left:36px; padding-right: 10px;font-family:Verdana;font-weight:200;">
                    Aloc Qty:
                </td>
                <td>

                    <input id="txtAlocQty" type="text" name="AlocQty" class="form-control" value="@AlocQty" style="font-size:16px;font-weight: 900;font-weight: 900;font-family: verdana;color: red;">
                </td>*@
        </tr>
    </table>

    <br />
    <div class="box box-primary">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="col-md-10 col-sm-10 col-xs-10" style="bottom: -24px;">
                    <div>
                        <div id="Recorddisplay">

                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-sm-2 col-xs-2">
                    <ul class="pagination" id="paging" style="margin-left:120px; margin:-45px; padding-left:150px;"></ul>
                </div>
            </div>
        </div>
        <table id="StockAsofdateInq" class="table table-bordered table-striped" style="border:1px solid #121213 ;">
            <thead class="grid_backcolor">
                <tr>
                    <th class="grid_header_backcolor">IBDocID</th>
                    <th class="grid_header_backcolor">Rcvd Dt</th>
                    <th class="grid_header_backcolor">ContID</th>
                    <th class="grid_header_backcolor">Style</th>
                    <th class="grid_header_backcolor">Color</th>
                    <th class="grid_header_backcolor">Size</th>
                    <th class="grid_header_backcolor">Desc</th>
                    <th class="grid_header_backcolor">Whs</th>
                    <th class="grid_header_backcolor">LocID</th>
                    <th class="grid_header_backcolor">AvlCtn</th>
                    <th class="grid_header_backcolor">PPK</th>
                    <th class="grid_header_backcolor">AvlQty</th>
                </tr>
            </thead>
            <tbody style="background-color:white">
                @for (int i = 0; i < Model.ListStockAsOfDateGrid.Count; i++)
            {
                    <tr>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].ib_doc_id</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].rcvd_dt.ToString("MM/dd/yyyy")</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].cont_id</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].itm_num</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].itm_color</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].itm_size</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].itm_name</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].whs_id</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].loc_id</td>
                        @*<td style="font-size:12px;color:black; font-weight:bold; font-family: verdana;">@Model.ListStockAsOfDateGrid[i].lot_id</td>
                            <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].po_num</td>*@
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana;text-align:right ">@Model.ListStockAsOfDateGrid[i].Ctns</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana;text-align:right ">@Model.ListStockAsOfDateGrid[i].pkg_qty</td>
                        <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana;text-align:right ">@Model.ListStockAsOfDateGrid[i].avail_qty</td>
                        @* <td style="font-size:12px;color:black; font-weight:bold;font-family: verdana; ">@Model.ListStockAsOfDateGrid[i].palet_id</td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#childtab").tabs();
    });
    $(function () {
        $('td').click(function () {
            $('tr').removeClass('active');
            $(this).parent().addClass('active');
        });
    });
    $("#example1").DataTable();
    $(function () {
        $('#StockAsofdateInq').DataTable({
            "pageLength": 50,
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': false,
            'info': false,
            'autoWidth': false,
        });


    })
    $("#btnClose").click(function () {

        window.location.href = '@Url.Action("Dashboard", "DashBoard")';
    })
    $("input[name=chkAll]").click(function () {
        if ($(this).prop("checked") == true) {
            $("input[name='tblcheckbox']").prop("checked", true);
        }
        else if ($(this).prop("checked") == false) {
            $("input[name='tblcheckbox']").prop("checked", false);
        }

    });

</script>
