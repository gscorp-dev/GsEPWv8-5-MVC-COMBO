                            <label><b class="Lblmanual">Batch Id</b></label>
                        </div>
                        <div class="col-xs-1" style="width: 12.5%;padding-bottom: 1%;">
                            @Html.TextBoxFor(model => model.batch_num, new { @id = "le_batch_num", @class = "form-control txtlbl", @maxlength = "30" })
