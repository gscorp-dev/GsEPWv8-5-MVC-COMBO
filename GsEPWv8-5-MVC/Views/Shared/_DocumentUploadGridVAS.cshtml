                contentType: "application/json; charset=utf-8",
                data: { "cmp_id": cmp_id, "Filename": Filename, "Filepath": Filepath, "uplddt": uplddt, "pstrVASDocId": pstrVASDocId },
                datatype: "json",

                success: function (data) {
