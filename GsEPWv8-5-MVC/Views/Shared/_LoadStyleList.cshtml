                <thead class="grid_backcolor">
                    <tr>
                        <th class="grid_header_backcolor" style="width:10%">Select</th>
                        <th class="grid_header_backcolor" style="width:20%">Style</th>
                        <th class="grid_header_backcolor" style="width:20%">Color</th>
