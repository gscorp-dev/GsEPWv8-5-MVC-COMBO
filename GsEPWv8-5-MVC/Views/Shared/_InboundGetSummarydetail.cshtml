                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </fieldset>
    </div>
    <div id="hdrgridshow"></div>
</div>

<script type="text/javascript">
    $('#example1 tr').click(function (event) {
        var tablerowvalue = $(this).attr('id');
        var p_str_cmp_id = $('#cmp_id').val();
        $.ajax({
            type: "GET",
            url: "/InboundReceiving/GetSummaryhdr",
            data: {
                "tablerowvalue": tablerowvalue, "p_str_cmp_id": p_str_cmp_id
            },
            dataType: 'html',
            success: function (e) {
                $('#hdrgrid').hide();
                $('#hdrgridshow').html("");
                $('#hdrgridshow').html(e);
            },
        })

    });


    $("#example1").DataTable();
    $('#example3').DataTable({
        "pageLength": 10,
        'paging': true,
        'lengthChange': false,
        'searching': false,
        'ordering': false,
        'info': false,
        'autoWidth': false,
    });
    $("#example1 tr").not(':first').hover(
function () {
    $(this).css("background", "#dcf4ff");
},
function () {
    $(this).css("background", "white");
}
);
    $("#example2 tr").not(':first').hover(
function () {
    $(this).css("background", "#dcf4ff");
},
function () {
    $(this).css("background", "white");
}
);
    $("#btnClose").click(function () {

        window.location.href = '@Url.Action("Adminpage", "Home")';
    })
    $("input[name=chkAll]").click(function () {
        if ($(this).prop("checked") == true) {
            $("input[name='tblcheckbox']").prop("checked", true);
        }
        else if ($(this).prop("checked") == false) {
            $("input[name='tblcheckbox']").prop("checked", false);
        }

    });
    $("input[name='tblcheckbox']").on('change', function () {
        $("input[name='tblcheckbox']").not(this).prop('checked', false);
    });
    $("#btnClose").click(function () {

        window.location.href = '@Url.Action("Dashboard", "DashBoard")';
    })
</script>
