                <tbody style="background-color:rgba(0, 0, 0, 0.12);">

                    @for (int i = 0; i < Model.LstInboundReceiving.Count; i++)
                    {

                        <tr style="background-color:white; " id="@Model.LstInboundReceiving[i].ib_doc_id ">

                            <td style="text-align:center"><input class="checkbox" id="chkdd_@i" name="tblcheckbox" type="checkbox" value="@Model.LstInboundReceiving[i].ib_doc_id" onclick="test()" /></td>
                            <td style="font-size:12px; color:black; font-weight:bold;" id="@Model.LstInboundReceiving[i].ib_doc_id" value="@Model.LstInboundReceiving[i].ib_doc_id" onclick="test()">@Model.LstInboundReceiving[i].WhsId</td>
                            <td style="font-size:12px; color:black; font-weight:bold;">@Model.LstInboundReceiving[i].ib_doc_id  </td>
                            <td style="font-size:12px; color:black; font-weight:bold;">@Model.LstInboundReceiving[i].po_num</td>
                            <td style="font-size:12px; color:black; font-weight:bold;">@Model.LstInboundReceiving[i].rcvd_dt</td>
                            <td style="font-size:12px; color:black; font-weight:bold;">@Model.LstInboundReceiving[i].cont_id</td>
                            <td style="font-size:12px; color:black; font-weight:bold;">@Model.LstInboundReceiving[i].TotLots</td>
                            <td style="font-size:12px; color:black; font-weight:bold;">@Model.LstInboundReceiving[i].TotQty</td>
                            <td style="font-size:12px; color:black; font-weight:bold;">@Model.LstInboundReceiving[i].TotCtns</td>
                            <td style="font-size:12px; color:black; font-weight:bold; text-align:right;">@Model.LstInboundReceiving[i].status</td>
                            <td style="font-size:12px; color:black; font-weight:bold; text-align:right;">@Model.LstInboundReceiving[i].sent_dt</td>

                        </tr>
                    }
                </tbody>
            </table>

