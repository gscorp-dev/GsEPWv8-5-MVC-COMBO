                        int line = i + 1;
                        var Amt = (Model.List_ibs_dtl[i].amt);
                        var Rate = (Model.List_ibs_dtl[i].srvc_price);
                        var l_dec_Amt = Amt.ToString("F2");
                        var l_dec_rate = Rate.ToString("F2");
