<script type="text/javascript">

    $(document).ready(function () {
        document.getElementById("btnStkAdjSave").setAttribute("hidden", "");
         $('#adj_adj_ctns').val('');
        $("#adj_cur_loc_id").attr('disabled', 'disabled');
        $("#adj_cur_avail_ctn").attr('disabled', 'disabled');
        $("#adj_bal_avail_ctns").attr('disabled', 'disabled');
        $("#adj_cur_itm_qty").attr('disabled', 'disabled');
        document.getElementById("divIsStkAdjs").setAttribute("hidden", "");
        $("#divIsStkAdjs").attr('disabled', 'disabled');
        $("#adj_cmp_id").attr('disabled', 'disabled');
        $("#adj_cur_itm_num").attr('disabled', 'disabled');
        $("#adj_cur_itm_color").attr('disabled', 'disabled');
        $("#adj_cur_itm_size").attr('disabled', 'disabled');
        $("#adj_cur_itm_name").attr('disabled', 'disabled');
        $("#adj_cur_lot_id").attr('disabled', 'disabled');
        $("#adj_cur_po_num").attr('disabled', 'disabled');

    });

    $(document).ready(function () {
        $('.VLDTITMFILD').keyup(function () {
            $(this).val($(this).val().toUpperCase());
        });
    });

    $(function () {
        $("#btnVerifyAdj").click(function ()
        {
            debugger;
            var p_int_adj_adj_ctns = $('#adj_adj_ctns').val();

            if ((p_int_adj_adj_ctns == 0) || (p_int_adj_adj_ctns == ''))
            {
                swal("", "Adjust Ctn(s) can not be zero ", "");
                return false;
            }

            document.getElementById("divIsStkAdjs").setAttribute("hidden", "");
            $("#divIsStkAdjs").attr('disabled', 'disabled');
            var p_str_cur_loc_id = $('#adj_cur_loc_id').val();
            var p_int_adj_cur_avail_ctn = $('#adj_cur_avail_ctn').val();

         
            var p_int_bal_ctns = parseInt(p_int_adj_cur_avail_ctn) - parseInt(p_int_adj_adj_ctns);
            var p_int_adj_cur_itm_qty = $('#adj_cur_itm_qty').val();
           
            var is_changed = 'N';
            var l_str_data_change = '';
           

            if (p_int_adj_adj_ctns >  p_int_adj_cur_avail_ctn)  
            {
                swal("", "Adjust Ctn(s) can not be zero or Should be less than Avail Ctn(s)", "");
                return false;
            }
            else
            {
                l_str_data_change = l_str_data_change.concat(' Number of Available CTN(s) Changed from ', p_int_adj_cur_avail_ctn, ' To ', p_int_bal_ctns);
                is_changed = 'Y';
            }
         

            if( is_changed == 'Y')
            {
                document.getElementById('lblIsStkAdjs').innerHTML = l_str_data_change;
                document.getElementById("btnStkAdjSave").removeAttribute("hidden");
                document.getElementById("divIsStkAdjs").removeAttribute("hidden");
            }
            else
            {
                swal("", "No change in Ctn(s) ", "");
                document.getElementById("btnStkAdjSave").setAttribute("hidden", "");
            }

        })
    });

    $(function () {
        $("#btnStkAdjSave").click(function () {
            debugger;
            var p_str_adj_reason = $('#adj_reason').val();

            if (p_str_adj_reason == "--Select ADJ Reason--")
            {
                swal("", "Please select the Inventory Adjustment Reason ", "");
                return false;
            }

            if (chkStkAdjs.checked)
            {
                document.getElementById("btnStkAdjSave").setAttribute("hidden", "");
                var p_str_cmp_id = $('#adj_cmp_id').val();
                var p_str_itm_num = $('#adj_cur_itm_num').val();
                var p_str_itm_color = $('#adj_cur_itm_color').val();
                var p_str_itm_size = $('#adj_cur_itm_size').val();
                var p_str_itm_code = $('#adj_cur_itm_code').val();
                var p_str_lot_id = $('#adj_cur_lot_id').val();
                var p_str_po_num = $('#adj_cur_po_num').val();
                var p_str_from_loc_id = $('#adj_cur_loc_id').val();
                var p_int_cur_ctns = $('#adj_cur_avail_ctn').val();
                var p_int_adj_ctns = $('#adj_adj_ctns').val();

                var p_int_cur_itm_qty = $('#adj_cur_itm_qty').val();
           
                var p_str_adj_reason = $('#adj_reason').val();
                var p_str_note = $('#adj_note').val();
                $("#ajaxLoading").show();
                $.ajax({
                    type: "GET",
                    url: '@Url.Content("~/InvStkAdj/saveStockAdjCtns")',
                    data: {
                        "p_str_cmp_id": p_str_cmp_id,
                        "p_str_itm_num": p_str_itm_num,
                        "p_str_itm_color": p_str_itm_color,
                        "p_str_itm_size": p_str_itm_size, "p_str_itm_code": p_str_itm_code, "p_str_lot_id": p_str_lot_id, "p_str_po_num": p_str_po_num,
                        "p_str_from_loc_id": p_str_from_loc_id
                        , "p_int_adj_ctns": p_int_adj_ctns, "p_int_cur_itm_qty": p_int_cur_itm_qty,
                        "p_str_adj_reason": p_str_adj_reason, "p_str_note": p_str_note
                    },
                    dataType: 'html',
                    success: function (e) {
                        if (e == 2) {
                            swal("", "Unable to Save the Record.", "");
                            $("#ajaxLoading").hide();
                            $('body,html').animate({ scrollTop: 0 }, 0);
                            document.getElementById("btnStkAdjSave").removeAttribute("hidden");
                            return false;
                        }
                        if (e == 1) {
                            swal({
                                title: "",
                                text: "Inventory Stock Ajdustment successfully",
                                type: "",
                                showCancelButton: false,
                                confirmButtonClass: "btn-danger",
                                confirmButtonText: "Ok",
                                closeOnConfirm: true
                            },
                        function () {
                            setTimeout(function () {
                                var p_str_cmp_id = $('#adj_cmp_id').val();

                                $('#StockAdjModal').modal('hide');
                                $.ajax({
                                    type: "GET",
                                    url: '@Url.Content("~/InvStkAdj/RefreshStockAdjGridDetails")',
                                    data: {
                                        "p_str_cmp_id": p_str_cmp_id
                                    },
                                    dataType: 'html',
                                    success: function (e) {
                                        $("#ajaxLoading").hide();
                                        $('#showgrid').hide();
                                        $('#showgridstock_inq').html("");
                                        $('#showgridstock_inq').html(e);
                                    },

                                })
                            });
                        });

                        }

                        else {
                            swal("", "Unable to Save the record", "");
                            document.getElementById("btnStkAdjSave").removeAttribute("hidden");

                        }
                    },

                })

            }
            else
            {
                sweetAlert("", "Please verify the changes and click Save", "");
                return false;
            }
        })
    });

   


    $(function () {
        $("#btnAdjClear").click(function () {
            debugger;
         
            $('#adj_adj_ctns').val('');
            document.getElementById("chkStkAdjs").checked = false;
            document.getElementById("divIsStkAdjs").setAttribute("hidden", "");
            $("#divIsStkAdjs").attr('disabled', 'disabled');
            document.getElementById("btnStkAdjSave").setAttribute("hidden", "");
            $("#divIsStkAdjs").attr('disabled', 'disabled');
        })
    });

    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });


    $(".ui-autocomplete").css("z-index", "2147483647");
</script>

<script>

    $("#adj_adj_ctns").focusout(function () {
        debugger;

        var lintAvailCtns = $("#adj_cur_avail_ctn").val();
        var lintAdjCtns = $("#adj_adj_ctns").val();
        if (lintAdjCtns != '') 
            {
            if (parseInt(lintAdjCtns) > parseInt(lintAvailCtns)) {
                swal("", "Reduction Ctn(s) can not be greater than Available Ctn(s)", "");
                return false;
            }
            else
            {
                $("#adj_bal_avail_ctns").val(parseInt(lintAvailCtns) - parseInt(lintAdjCtns));
            }
        }
    });
</script>

        