                    <div class="col-xs-1" style="text-align: left;">
                        @Html.TextBoxFor(model => model.objInvStkAdjAdd.adj_ctns, new { @id = "adj_adj_ctns", @class = "form-control txtlbl numericOnly ", @maxlength = "10", @style = "width:100px;" })
                    </div>

                    <div class="col-xs-2" style="text-align: right;">
